global:
  scrape_interval: 15s
  evaluation_interval: 15s
  external_labels:
    cluster: 'int531-node2'
    environment: 'production'

# Alertmanager configuration
alerting:
  alertmanagers:
    - static_configs:
        - targets:
            - '{{ ansible_default_ipv4.address }}:9093'

# Load rules once and periodically evaluate them
rule_files:
  - '/etc/prometheus/alert.rules.yml'

scrape_configs:
  # Prometheus itself
  - job_name: 'prometheus'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9090']
        labels:
          service: 'prometheus'

  # Node Exporter - System metrics
  - job_name: 'node_exporter'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:9100']
        labels:
          service: 'node_exporter'
          instance: 'int531-vm'

  # Backend Application
  - job_name: 'backend'
    metrics_path: '/api/metrics'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:3001']
        labels:
          service: 'backend'
          tier: 'application'

  # Frontend Application (health check only)
  - job_name: 'frontend'
    metrics_path: '/health'
    static_configs:
      - targets: ['{{ ansible_default_ipv4.address }}:3000']
        labels:
          service: 'frontend'
          tier: 'presentation'
