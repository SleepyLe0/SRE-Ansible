networks:
  sre-network:
    driver: bridge

services:
  mariadb:
    image: mariadb:latest
    container_name: x-mariadb
    restart: unless-stopped
    networks:
      - sre-network
    ports:
      - "3306:3306"
    environment:
      - MYSQL_ROOT_PASSWORD=rootpassword
      - MYSQL_DATABASE=students_db
      - MYSQL_USER=appuser
      - MYSQL_PASSWORD=apppassword
    command:
      - --character-set-server=utf8mb4
      - --collation-server=utf8mb4_unicode_ci
    healthcheck:
      test:
        - "CMD-SHELL"
        - 'mariadb-admin ping -h 127.0.0.1 -p"$$MYSQL_ROOT_PASSWORD"'
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 40s
    volumes:
      - db-data:/var/lib/mysql

  app:
    image: node:18-alpine
    container_name: x-nextjs-app
    restart: unless-stopped
    working_dir: /app
    networks:
      - sre-network
    depends_on:
      - mariadb
    environment:
      - NODE_ENV=production
      - PORT=3100
      - DATABASE_URL=mysql://appuser:apppassword@mariadb:3306/students_db
    ports:
      - "3100:3100"
    volumes:
      - /opt/app:/app
    command: sh -c "npm install && npm start"

volumes:
  db-data:
    driver: local
